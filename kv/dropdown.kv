#:import STD_INC kivymd.material_resources.STANDARD_INCREMENT


<RightContent>
    adaptive_width: True


<MDMenuItem>
    _txt_top_pad: "8dp"
    _txt_bot_pad: "16dp"
    on_release: root.parent.parent.parent.parent.dispatch("on_dismiss")

    IconLeftWidget:
        icon: root.icon
        pos_hint: {"center_y": .5}


<MDMenu>
    size_hint: None, None
    width: root.width_mult * STD_INC
    bar_width: 0

    MDGridLayout:
        id: box
        cols: 1
        adaptive_height: True


<AutocompleteDropdownMenu>

    MDCard:
        id: card
        elevation: 10
        size_hint: None, None
        size: md_menu.size
        pos: md_menu.pos
        md_bg_color: 0, 0, 0, 0
        opacity: md_menu.opacity

        canvas:
            Color:
                rgba: root.background_color if root.background_color else root.theme_cls.bg_dark
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [7,]

        MDMenu:
            id: md_menu
            width_mult: root.width_mult
            size_hint: None, None
            size: 0, 0
            opacity: 0
