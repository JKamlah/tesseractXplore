# Tabs used for taxon selection

# Taxon history tab
<TaxonHistoryTab@Tab>:
    text: 'history'
    # tooltip_text: 'History'
    orientation: 'vertical'
    padding: dp(20)
    OneLineListItem:
        font_style: 'H5'
        text: 'History'
    ScrollViewY:
        size_hint_max_x: dp(500)
        MDList:
            id: taxon_history_list

# Frequently viewed taxa tab
<FrequentTaxaTab@Tab>:
    text: 'poll'
    # tooltip_text: 'Frequent'
    orientation: 'vertical'
    padding: dp(20)
    OneLineListItem:
        font_style: 'H5'
        text: 'Frequent'
    ScrollViewY:
        size_hint_max_x: dp(500)
        SortableList:
            id: frequent_taxa_list

# Starred taxa tab
<StarredTaxaTab@Tab>:
    text: 'star'
    # tooltip_text: 'Starred'
    orientation: 'vertical'
    padding: dp(20)
    OneLineListItem:
        font_style: 'H5'
        text: 'Starred'
    ScrollViewY:
        size_hint_max_x: dp(500)
        MDList:
            id: starred_taxa_list
