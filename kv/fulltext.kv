<FulltextViewScreen>:
    name: 'fulltext'

    BoxLayout:
        orientation: 'vertical'
        MDTabs:
            id: fulltext_tabs
            background_color: app.theme_cls.primary_color

            Tab:
                text: 'Image'
                ScatterLayout:
                    Image:
                        id: image
                        allow_stretch: True
                        keep_ratio: True
                        size: self.parent.size
                        do_rotation: False

            Tab:
                text: 'Text'
                cols: 2
                TextInput:
                    id: text
                    readonly: False
                    multiline: True
                ScatterLayout:
                    Image:
                        id: image_text
                        allow_stretch: True
                        keep_ratio: True
                        size: self.parent.size
                        do_rotation: False
            Tab:
                text: 'ALTO'
                TextInput:
                    id: alto
                    readonly: True
                    multiline: True
            Tab:
                text: 'hOCR'
                TextInput:
                    id: hocr
                    readonly: True
                    multiline: True
            Tab:
                text: 'TSV'
                TextInput:
                    id: tsv
                    readonly: True
                    multiline: True
        StatusBar:
            id: status_bar
