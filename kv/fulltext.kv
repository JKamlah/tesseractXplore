<FulltextViewScreen>:
    name: 'fulltext'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Zoom:
                Image:
                    id: image
                    allow_stretch: True
                    keep_ratio: True
                    size: self.parent.size
            MDTabs:
                id: fulltext_tabs
                background_color: app.theme_cls.primary_color
                Tab:
                    text: 'Text'
                    orientation: 'vertical'
                    background_color: app.theme_cls.primary_color
                    md_bg_color: 0,0,0,1
                    MDDropDownItem:
                        id: textfiles
                        text: ''
                        on_release: app.fulltext_view_controller.textfiles_menu.open()
                        md_bg_color: 0,0,0,1
                    MDBoxLayout:
                        size_hint_y: None
                        height: dp(30)
                        spacing: dp(5)
                        MDRaisedButton:
                            id: save_text_button
                            text: 'Save text'
                            height: dp(30)
                            theme_text_color: 'Primary'
                            md_bg_color: app.theme_cls.primary_dark
                        MDRaisedButton:
                            id: delete_empty_lines_button
                            text: 'Delete empty lines'
                            height: dp(30)
                            theme_text_color: 'Primary'
                            md_bg_color: app.theme_cls.primary_dark
                        MDRaisedButton:
                            id: set_fontsize
                            text: 'Set fontsize'
                            height: dp(30)
                            theme_text_color: 'Primary'
                            md_bg_color:  app.theme_cls.primary_dark
                            on_release: if root.ids.fontsize.text.replace('.','').isdigit(): root.ids.text.font_size = float(root.ids.fontsize.text)
                        MDTextFieldRect:
                            size_hint: None, None
                            height: '30dp'
                            width: '50dp'
                            id: fontsize
                            mode: 'rectangle'
                        MDRaisedButton:
                            id: replace_button
                            text: 'Replace'
                            height: dp(30)
                            theme_text_color: 'Primary'
                            md_bg_color:  app.theme_cls.primary_dark
                            on_release: root.ids.text.text = root.ids.text.text.replace(root.ids.find.text, root.ids.replace.text)
                        MDTextFieldRect:
                            id: find
                            size_hint: None, None
                            height: '30dp'
                            width: '100dp'
                            hint_text: 'Find'
                            mode: 'rectangle'
                        MDTextFieldRect:
                            id: replace
                            size_hint: None, None
                            height: '30dp'
                            width: '100dp'
                            hint_text: 'Replace'
                            mode: 'rectangle'
                    TextInput:
                        id: text
                        readonly: False
                        multiline: True

                Tab:
                    text: 'ALTO'
                    TextInput:
                        id: alto
                        readonly: True
                        multiline: True
                Tab:
                    text: 'hOCR'
                    id: hocr
                    BoxLayout:
                        orientation: 'vertical'
                        MDDropDownItem:
                            id: hocrfiles
                            text: ''
                            on_release: app.fulltext_view_controller.hocrfiles_menu.open()
                            md_bg_color: 0,0,0,1
                        MDRaisedButton:
                            id: save_hocr_button
                            text: 'Save text'
                            height: dp(30)
                            theme_text_color: 'Primary'
                            md_bg_color: app.theme_cls.primary_dark
                        ScrollView:
                            id: hocr_view
                    #TextInput:
                    #    id: hocr
                    #    readonly: True
                    #    multiline: True
                Tab:
                    text: 'TSV'
                    TextInput:
                        id: tsv
                        readonly: True
                        multiline: True
        StatusBar:
            id: status_bar
