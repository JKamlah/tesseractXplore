<SettingsScreen>:
    id: settings_screen
    name: 'settings'

    MDList:
        OneLineListItem:
            font_style: 'H5'
            text: 'iNaturalist settings'

        OneLineListItem:
        OneLineListItem:
            font_style: 'H5'
            text: 'Metadata settings'
        TwoLineAvatarListItem:
            font_style: 'H6'
            text: 'Common names'
            secondary_text: 'Include common names in taxonomy keywords'
            SwitchListItem:
                id: common_names_chk
        TwoLineAvatarListItem:
            font_style: 'H6'
            text: 'Hierarchical Keywords'
            secondary_text: 'Generate pipe-delimited hierarchical keywords'
            SwitchListItem:
                id: hierarchical_keywords_chk
        TwoLineAvatarListItem:
            font_style: 'H6'
            text: 'Darwin Core Metadata'
            secondary_text: 'Convert taxon/observation metadata into XMP Darwin Core metadata'
            SwitchListItem:
                id: darwin_core_chk
        TwoLineAvatarListItem:
            font_style: 'H6'
            text: 'Create XMP Files'
            secondary_text: 'Create XMP sidecar files if they don\'t already exist'
            SwitchListItem:
                id: create_xmp_chk

        OneLineListItem:
        OneLineListItem:
            font_style: 'H6'
            font_style: 'H5'
            text: 'Display settings'
        OneLineAvatarListItem:
            text: 'Dark Mode'
            SwitchListItem:
                id: dark_mode_chk
