<SettingsScreen>:
    name: 'settings'
    BoxLayout:
        orientation: 'vertical'
        ScrollViewY:
            MDList:
                size_hint_min_x: 400
                size_hint_max_x: 700
                OneLineListItem:
                    font_style: 'H5'
                    text: 'TesseractXplore settings'
                OneLineListItem:
                    font_style: 'H6'
                    text: 'Username'
                MDTextField:
                    mode: "rectangle"
                    id: username_input
                    size_hint_min_x: 100
                    #icon_left: 'account'
                    #hint_text: 'Username'
                OneLineListItem:
                    font_style: 'H6'
                    text: 'Password'
                MDTextField:
                    id: password
                    mode: "rectangle"
                    password: True
                    hint_text: 'Password'
                OneLineListItem:
                OneLineListItem:
                    font_style: 'H5'
                    text: 'I/O Settings'
                OneLineListItem:
                    font_style: 'H6'
                    text: 'Image filetypes'
                MDTextField:
                    id: filetypes
                    mode: "rectangle"
                    hint_text: 'Set filetypes'
                OneLineListItem:
                    font_style: 'H6'
                    text: 'Regex'
                MDTextField:
                    id: regex
                    mode: "rectangle"
                    hint_text: 'Set Regex to find files'
                TwoLineListItem:
                    font_style: 'H6'
                    text: 'PDF-Viewer'
                    secondary_text: 'Default: webbrowser'
                MDTextField:
                    id: pdfviewer
                    mode: "rectangle"
                    hint_text: 'Set path or cli-cmd to pdfviewer'
                OneLineListItem:
                OneLineListItem:
                    font_style: 'H5'
                    text: 'Extra Tesseract-Settings'
                OneLineAvatarListItem:
                    text: 'Use Path to tesseract'
                    SwitchListItem:
                        id: tesseract_path_chk
                MDTextField:
                    mode: "rectangle"
                    id: tesspath
                    size_hint_min_x: 100
                    #text: 'C:\\Program Files\\Tesseract-OCR\\tesserac.exe'
                OneLineListItem:
                    font_style: 'H6'
                    text: 'DPI'
                MDTextField:
                    id: dpi
                    mode: "rectangle"
                    hint_text: 'Set DPI (default: auto)'
                    #on_release: app.tesseract_controller.dpi_menu.open()
                OneLineListItem:
                    font_style: 'H6'
                    text: 'Extra parameter'
                MDTextField:
                    id: param
                    mode: "rectangle"
                    hint_text: 'Set parameter (e.g. load_system_dawg=1)'
                    #on_release: app.tesseract_controller.dpi_menu.open()
                OneLineListItem:
                OneLineListItem:
                    font_style: 'H6'
                    font_style: 'H5'
                    text: 'Display settings'
                OneLineAvatarIconListItem:
                    text: 'Dark Mode'
                    SwitchListItem:
                        id: dark_mode_chk
                    IconRight:
                        icon: 'theme-light-dark'
                OneLineListItem:
                    font_style: 'H6'
                    font_style: 'H5'
                    text: 'Control settings'
                OneLineAvatarIconListItem:
                    id: reset_default_button
                    text: 'Reset to defaults'
                    IconLeft:
                        icon: 'backup-restore'
        StatusBar:
            id: status_bar
