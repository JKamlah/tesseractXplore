#:kivy 1.11
#:import ASSETS_DIR naturtag.constants.ASSETS_DIR
#:import IMAGE_FILETYPES naturtag.constants.IMAGE_FILETYPES
#:import version naturtag.__version__
#:import Transition kivy.uix.screenmanager.NoTransition


<TextFieldListItem@MDTextFieldRound>:
    normal_color: app.theme_cls.bg_dark
    icon_right_color: app.theme_cls.accent_color

<IconRight@IconRightWidget>:
    md_bg_color: app.theme_cls.accent_color

<IntField@MDTextField>:
	input_filter: 'int'
	helper_text_mode: 'on_focus'

<ScrollViewY@ScrollView>:
    do_scroll_x: False
    do_scroll_y: True
    effect_cls: 'OpacityScrollEffect'
    scroll_type: ['bars', 'content']
    scroll_wheel_distance: 100
    size: self.size
    bar_width: 10

<TextOutput@TextInput>:
    readonly: True
    multiline: True


# Top-level layout with screen manager, toolbar, and nav drawer
<Root>:
	orientation: 'vertical'
	md_bg_color: app.theme_cls.primary_color
	adaptive_size: True

    # Toolbar with buttons
	MDToolbar:
		id: toolbar
		size_hint_max_y: 100

    # Main view populated with currently selected screen
	NavigationLayout:
		title: app.title
		md_bg_color: app.theme_cls.primary_color
		x: toolbar.height

		ScreenManager:
			id: screen_manager
			transition: Transition()

		MDNavigationDrawer:
			id: nav_drawer
			ContentNavigationDrawer:


# Main nav drawer
<ContentNavigationDrawer@BoxLayout>:
	BoxLayout:
		orientation: 'vertical'
		FloatLayout:
			size_hint_y: None
			height: '310dp'
			canvas:
				Color:
					rgba: app.theme_cls.bg_normal
				Rectangle:
					pos: self.pos
					size: self.size

			BoxLayout:
				id: top_box
				size_hint_y: None
				height: '300dp'
				x: root.parent.x
				pos_hint: {'top': 1}
				FitImage:
					source: f'{ASSETS_DIR}naturtag-logo.png'

			MDIconButton:
				icon: 'close'
				x: root.parent.x + dp(10)
				pos_hint: {'top': 1}
				on_release: app.close_nav()

			MDLabel:
				markup: True
				text: f'[b]Naturtag[/b] Version: {version}'
				x: root.parent.x + dp(10)
				y: root.height - top_box.height
				size_hint_y: None
				height: self.texture_size[1]

		ScrollView:
			MDList:
				OneLineIconListItem:
					text: 'Image Selector'
					on_press:
						app.switch_screen('image_selector')
					IconLeftWidget:
						icon: 'home'
				OneLineIconListItem:
					text: 'Settings'
					on_press:
						app.switch_screen('settings')
					IconLeftWidget:
						icon: 'settings'
				OneLineIconListItem:
					text: 'Exit'
					on_press:
						app.stop()
					IconLeftWidget:
						icon: 'exit-to-app'
