<ImageEditorScreen>:
    name: 'image'
    MDBoxLayout:
        orientation: 'horizontal'
        col: 2
        BoxLayout:
            orientation: 'vertical'
            #size_hint: (1, 5)
            Zoom:
                Image:
                    id: image
                    allow_stretch: True
                    keep_ratio: True
                    size: self.parent.size
        MDBoxLayout:
            orientation: 'vertical'
            padding: '8dp'
            orientation: 'vertical'
            size_hint_x: .4
            size_hint_min_x: 450
            md_bg_color: .1, .1, .1, .9
            MDLabel:
                text: 'Brightness [b][color=b39ddb]' + str(round(root.ids.brightness.value)) + '[/color][/b]'
                markup: True
                halign: 'center'
                theme_text_color: 'Primary'
                #pos_hint: {'center_x':0.1, 'center_y': 0.2}
            MDSlider:
                id: brightness
                min: 0
                max: 200
                value: 100
                size_hint_x: 0.75
                size_hint_y: 0.1
                hint: False
                #pos_hint: {'center_x':0.1, 'center_y': 0.2}
            MDLabel:
                text: 'Contrast [b][color=b39ddb]' + str(round(root.ids.contrast.value)) + '[/color][/b]'
                markup: True
                halign: 'center'
                theme_text_color: 'Primary'
                #pos_hint: {'center_x':0.1, 'center_y': 0.3}
            MDSlider:
                id: contrast
                min: 0
                max: 200
                value: 100
                size_hint_x: 0.75
                size_hint_y: 0.1
                hint: False
                #pos_hint: {'center_x':0.1, 'center_y': 0.3}

            MDLabel:
                text: 'Sharpness [b][color=b39ddb]' + str(round(root.ids.sharpness.value)) + '[/color][/b]'
                markup: True
                halign: 'center'
                theme_text_color: 'Primary'
                #pos_hint: {'center_x':0.1, 'center_y': 0.3}
            MDSlider:
                id: sharpness
                min: -5
                max: 5
                value: 0
                size_hint_x: 0.75
                size_hint_y: 0.1
                hint: False
                #pos_hint: {'center_x':0.1, 'center_y': 0.3}

            MDLabel:
                text: 'Angle of rotation [b][color=b39ddb]' + root.ids.rotate.text + 'Â°[/color][/b]'
                markup: True
                halign: 'center'
                theme_text_color: 'Primary'
                #pos_hint: {'center_x':0.1, 'center_y': 0.3}
            MDTextField:
                id: rotate
                input_filter: 'float'
                text: '0.0'
                hint_text: 'Angle of rotation'

            MDTextField:
                id: crop
                input_filter: 'int'
                text: '0'
                hint_text: 'Remove border from image'


            OneLineAvatarIconListItem:
                text: 'Autocontrast'
                SwitchListItem:
                    id: autocontrast_chk
            OneLineAvatarIconListItem:
                text: 'Equalize'
                SwitchListItem:
                    id: equalize_chk
            OneLineAvatarIconListItem:
                text: 'Stack actions'
                SwitchListItem:
                    id: stack_chk



            OneLineAvatarIconListItem:
                text: 'Apply to all selected images (if no output folder is set, images get overwritten!)'
                height: dp(50)
                #width: dp(400)
                SwitchListItem:
                    id: apply_to_selected_chk

            MDTextField:
                id: outputfolder
                hint_text: 'Create outputfolder'

            MDBoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: dp(5)
                ControlTooltipButton:
                    id: adjust_button
                    text: 'Adjust image'
                    tooltip_text: 'Adjust image'
                    icon: 'play'
                    height: dp(50)
                    theme_text_color: 'Primary'
                    md_bg_color: app.theme_cls.primary_dark
                ControlTooltipButton:
                    id: reset_button
                    text: 'Reset'
                    tooltip_text: 'Reset'
                    icon: 'restore'
                    height: dp(50)
                    theme_text_color: 'Primary'
                    md_bg_color: app.theme_cls.primary_dark
                ControlTooltipButton:
                    id: save_button
                    text: 'Save image'
                    tooltip_text: 'Save image'
                    icon: 'content-save'
                    height: dp(50)
                    theme_text_color: 'Primary'
                    md_bg_color: app.theme_cls.primary_dark
                MDTextField:
                    id: imagename
                    hint_text: 'Imagename'





