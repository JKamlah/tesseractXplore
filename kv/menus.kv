<TessprofileContextMenuOnline@ObjectContextMenu>:
    visible: False
    TessprofileContextMenuItem:
        id: load_tessprofile_ctx
        text: "Load profile"
        on_release: app.tesseract_controller.search_tessprofile()
    TessprofileContextMenuItem:
        id: save_tessprofile_ctx
        text: "Save profile"
        on_release: app.tesseract_controller.save_tessprofile_dialog()
    TessprofileContextMenuItem:
        id: reset_settings_ctx
        text: "Reset"
        on_release: app.tesseract_controller.reset_settings()

