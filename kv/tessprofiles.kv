#:import images_path kivymd.images_path
<CustomOneLineIconListItem>:

    IconLeftWidget:
        icon: root.icon

<TessprofilesScreen>:
    name: 'tessprofiles'
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(20)

        OneLineAvatarIconListItem:
            text: 'Exact match'
            height: dp(50)
            #width: dp(400)
            SwitchListItem:
                id: exact_match_chk

        BoxLayout:
            size_hint_y: None
            height: self.minimum_height

            MDIconButton:
                icon: 'magnify'

            MDTextField:
                id: search_field
                hint_text: 'Search icon'
                on_text: app.tessprofiles_controller.set_profiles(self.text, True)

        RecycleView:
            id: tessprofilelist
            key_viewclass: 'viewclass'
            key_size: 'height'

            RecycleBoxLayout:
                padding: dp(10)
                default_size: None, dp(48)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
