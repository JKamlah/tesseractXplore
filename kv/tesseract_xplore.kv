#: import ObjectContextMenu tesseractXplore.widgets.ListItemWithCheckbox

<ListItemWithCheckbox>:
    RightCheckbox:



<ImageSelectionScreen>:
    name: 'tesseract_xplore'
    #name: 'image_selection'

    FloatLayout:
        id: layout
        canvas.before:
            Color:
                rgba: 1, 1, 1, .2
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size
        # Right-click context menu for images
        PhotoContextMenu:
            id: context_menu
            cancel_handler_widget: layout
        # Right-click context menu on tesseract-settings
        TessprofileContextMenu:
            id: tessprofile_menu
            cancel_handler_widget: layout
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                # Image viewer
                ScrollViewY:
                    id: image_scrollview
                    MDGridLayout:
                        id: image_previews
                        adaptive_height: True
                        cols: max(int(self.width / 200), 1)
                        padding: dp(4), dp(4)
                        spacing: dp(4)
                        row_default_height: 200
                        col_default_width: 200
                        col_force_default: True

                AnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'bottom'
                    id: process_manager
                    MDList:
                        #size_hint: None, None
                        #size: 200, 50
                        id: process_list
                        padding: 0


                #Options + file chooser
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_x: .4
                    size_hint_min_x: 450
                    col: 2
                    # Text input fields
                    # TODO: Move input/search to a separate screen

                    MDBoxLayout:
                        size_hint_y: 1.0
                        size_hint_min_y: 410
                        md_bg_color: .1, .1, .1, .1
                        MDGridLayout:
                            cols: 1
                            spacing: dp(4)
                            OneLineRightIconListItem:
                                id: settings_menu
                                font_style: 'H5'
                                markup: True
                                text: '[size=21]Tesseract [b]Settings[/b][/size]'
                                on_release: app.tesseract_controller.on_tesssettings_click()
                                IconRightWidget:
                                    icon: "folder-open"
                                    on_release: app.tesseract_controller.on_tesssettings_click()

                            MDDropDownItem:
                                id: model
                                text: 'Select model (default: eng)'

                            MDDropDownItem:
                                id: psm
                                size_hint_x: .4
                                size_hint_max_x: 450
                                text: 'Select page segmentation mode (PSM) (default: 3)'
                                on_release: app.tesseract_controller.psm_menu.open()

                            MDDropDownItem:
                                id: oem
                                text: 'Select OCR Engine mode (OEM) (default: 3)'
                                on_release: app.tesseract_controller.oem_menu.open()

                            MDBoxLayout:
                                orientation: 'vertical'
                                adaptive_height: True
                                #size_y: dp(60)
                                #size_hint_min_y: dp(60)
                                col:2
                                MDBoxLayout:
                                    size_hint_y: None
                                    height: dp(30)
                                    MDLabel:
                                        text: ' Select output format (default: print text on screen)'
                                        theme_text_color: 'Primary'
                                MDBoxLayout:
                                    orientation: 'horizontal'
                                    adaptive_height: True
                                    MyToggleButton:
                                        text:'TXT'
                                        id: txt
                                    MyToggleButton:
                                        text:'HOCR'
                                        id: hocr
                                    MyToggleButton:
                                        text:'ALTO'
                                        id: alto
                                    MyToggleButton:
                                        text:'PDF'
                                        id: pdf
                                    MyToggleButton:
                                        text:'TSV'
                                        id: tsv
                                OneLineAvatarIconListItem:
                                    text: 'Print on screen'
                                    height: dp(50)
                                    #width: dp(400)
                                    SwitchListItem:
                                        id: print_on_screen_chk
                            MDDropDownItem:
                                id: output
                                text: 'Select output directory (default: input directory)'
                                width: dp(400)

                                icon: 'folder'
                                #pos_hint:{'center_x':0.5,'center_y':0.7}
                                on_release: app.tesseract_controller.select_output_folder()
                            MDBoxLayout:
                                orientation: 'horizontal'
                                adaptive_height: True
                                col: 2
                                MDTextField:
                                    id: groupfolder
                                    hint_text: 'Create groupfolder'
                                    size_hint: None, 1
                                    width: dp(150)
                                OneLineAvatarIconListItem:
                                    text: 'Create subfolder'
                                    height: dp(50)
                                    #width: dp(400)
                                    SwitchListItem:
                                        id: subfolder_chk
                            MDBoxLayout:
                                orientation: 'horizontal'
                                adaptive_height: True
                                col: 2
                                MDRoundFlatIconButton:
                                    id: recognize_button_snd
                                    text: "Run"
                                    icon: 'play'

                                MDRoundFlatIconButton:
                                    id: pause_button_snd
                                    text: "Stop"
                                    icon: 'pause'
                                    disabled: True

                    # File Chooser
                    MDBoxLayout:
                        orientation: 'vertical'
                        md_bg_color: .1, .1, .1, .75
                        OneLineListItem:
                            font_style: 'H5'
                            markup: True
                            text: '[color=#ffffff][size=21]Image [b]Selection[/b][/size][/color]'

                        FileChooserListView:
                            id: file_chooser
                            dirselect: True
                            filters: IMAGE_FILETYPES

                        # Buttons; TODO: Make this less ugly
                        MDBoxLayout:
                            size_hint_y: None
                            height: dp(50)
                            spacing: dp(5)
                            #MDRaisedButton:
                            #    id: debug_button
                            #    text: 'Debug'
                            #    md_bg_color: app.theme_cls.primary_dark
                            MDBoxLayout:
                                md_bg_color: app.theme_cls.primary_dark
                                adaptive_height: True
                                padding: dp(0), dp(5.5)
                                MDRaisedButton:
                                    id: load_button
                                    text: 'Load Selected File/Folder'
                                    height: dp(50)
                                    theme_text_color: 'Primary'
                                    md_bg_color: app.theme_cls.primary_dark
                            MDBoxLayout:
                                md_bg_color: app.theme_cls.primary_dark
                                adaptive_height: True
                                padding: dp(10), dp(0)
                                MDSwitch:
                                    id: recursive_chk
                                MDLabel:
                                    text: 'Recursive'
                                    halign: 'center'
                                    font_style: 'Button'
                                    theme_text_color: 'ContrastParentBackground'
                            MDIconButton:
                                id: delete_button
                                icon: 'trash-can'
                                md_bg_color: app.theme_cls.primary_dark
                                tooltip_text: 'Delete Selected File/Folder'
                                halign: 'bottom'

            StatusBar:
                id: status_bar


        MDBoxLayout:
            cols: 4
            spacing: dp(4)
            padding: dp(4)
            pos_hint: {'y':0.02}

            ControlTooltipButton:
                id: recognize_button_fst
                icon: 'play'
                elevation_normal: 8
                #md_bg_color: app.theme_cls.primary_dark
                tooltip_text: 'Recognize all'
                halign: 'bottom'

            ControlTooltipButton:
                id: pause_button_fst
                icon: 'pause'
                tooltip_text: 'Cancel recognition'
                disabled: True
                elevation_normal: 8

            ControlTooltipButton:
                id: clear_button
                icon: 'trash-can'
                tooltip_text: 'Clear image selection'

            ControlTooltipButton:
                id: sort_button
                icon: 'sort'
                text: 'Sort Up'
                tooltip_text: 'Sort image selection'

            ControlTooltipButton:
                id: zoomin_button
                icon: 'magnify-plus'
                tooltip_text: 'Zoom in'

            ControlTooltipButton:
                id: zoomout_button
                icon: 'magnify-minus'
                tooltip_text: 'Zoom out'



